<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      spacing="12" alignment="CENTER"
      prefWidth="640" prefHeight="400">

    <Label text="Contract Parties &amp; Balances" styleClass="title-label"/>

    <TableView fx:id="partiesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="roleColumn" text="Role" prefWidth="120"/>
            <TableColumn fx:id="addressColumn" text="Address" prefWidth="600"/>
            <TableColumn fx:id="balanceColumn" text="Balance (ETH)" prefWidth="200"/>
            <TableColumn fx:id="actionColumn" text="View" prefWidth="55"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="refreshBtn" text="Refresh"/>
    </HBox>
</VBox>
